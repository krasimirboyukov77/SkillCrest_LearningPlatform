@using SkillCrest_LearningPlatform.ViewModels.ManageViewModels
@model IEnumerable<CourseManageViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Courses";
}

<h2 class="my-4 text-center">Manage Courses</h2>

<div class="d-flex justify-content-end mb-4">
    <a asp-action="Create" class="btn btn-success btn-lg">
        <i class="bi bi-plus-circle"></i> Add New Course
    </a>
</div>

<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Creator</th>
            <th scope="col">Date Created</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.CreatorName</td>
                <td>@course.DateCreated</td>
                <td class="text-center">
                    <a asp-area="" asp-controller="Course" asp-action="Edit" asp-route-id="@course.Id" class="btn btn-primary btn-sm me-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-area="" asp-controller="Course" asp-action="Delete" asp-route-courseId="@course.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                    <a asp-area="Admin" asp-controller="Manage" asp-action="LessonsInCourse" asp-route-courseId="@course.Id" class="btn btn-success btn-sm">
                        <i class="bi bi-book"></i> Lessons For Course
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
