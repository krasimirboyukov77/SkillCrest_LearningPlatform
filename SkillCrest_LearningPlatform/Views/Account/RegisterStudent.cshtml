@model StudentRegisterViewModel

<h2>Register as a Student</h2>

<form asp-action="RegisterStudent" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FullName">Full Name</label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SchoolName">Name of your school</label>
        <input asp-for="SchoolName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UserImage">Profile Picture (Optional)</label>
        <input asp-for="UserImage" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Interests">Your interests (Optional)</label>
        <input asp-for="Interests" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
<br>
<a href="@Url.Action("RegisterTeacher", "Account")" class="btn btn-primary">Go to Teacher Registration</a>