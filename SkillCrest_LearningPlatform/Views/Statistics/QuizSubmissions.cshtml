@using SkillCrest_LearningPlatform.ViewModels.StatisticsViewModels


@model ICollection<QuizShortDetails>

@{
    ViewData["Title"] = "Submissions";
}

<h1>@ViewData["Title"]</h1>

<div class="submissions-container">
    @if (Model.Count > 0)
    {
        @foreach (var submission in Model)
        {
            <div class="submission-card">
                <h3>@submission.Title</h3>
                <p>Submitted by: @submission.Submitter</p>
                <p>Score: @submission.Score / @submission.TotalScore points</p>
            </div>
        }
    }
    else
    {
        <p>No submissions yet!</p>
    }
</div>

<style>
    .submissions-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
    }

    .submission-card {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        width: 300px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .submission-card h3 {
        margin-bottom: 10px;
        font-size: 18px;
        color: #333;
    }

    .submission-card p {
        margin-bottom: 15px;
        font-size: 14px;
        color: #555;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>