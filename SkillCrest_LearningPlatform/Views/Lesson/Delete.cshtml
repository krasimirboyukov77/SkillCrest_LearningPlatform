@model DeleteLessonViewModel

@{
    ViewData["Title"] = "Delete Lesson";
}

<h2>Delete Lesson</h2>

<div>
    <h4>Are you sure you want to delete this lesson?</h4>
    <div>
        <strong>Title:</strong> @Model.Title<br />
        <strong>Date Created:</strong> @Model.DateCreated<br />
    </div>
</div>

<form asp-action="Delete" asp-controller="Lesson" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CourseId" />
    <input type="hidden" asp-for="CreatorId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-controller="Course" asp-route-id="@Model.CourseId" class="btn btn-secondary">Cancel</a>
</form>