@model CreateLessonViewModel
<link rel="stylesheet" href="https://formden.com/static/cdn/bootstrap-iso.css" />

<div class="bootstrap-iso">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="form-group ">
                        <label class="control-label " asp-for="Title">
                            Title
                        </label>
                        <input class="form-control" asp-for="Title" type="text" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label class="control-label " asp-for="Points">
                            Points
                        </label>
                        <input class="form-control" asp-for="Points" type="number" />
                        <span asp-validation-for="Points" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label class="control-label " asp-for="Description">
                            Description
                        </label>
                        <textarea class="form-control" cols="40" asp-for="Description" rows="10"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Date">Due Date:</label>
                        <input asp-for="DueDate" class="form-control" type="datetime-local" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>
                    <label for="file">Choose a file to upload:</label>
                    <input type="file" name="file" id="file" />
                    <br>
                    <input type="hidden" asp-for="CourseId" />
                    <div class="form-group">
                        <div>
                            <button type="submit" class="btn btn-primary " name="submit">
                                Submit
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}