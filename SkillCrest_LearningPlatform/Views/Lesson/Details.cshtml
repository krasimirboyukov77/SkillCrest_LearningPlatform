
@model LessonDetailsViewModel

<link rel="stylesheet" href="https://formden.com/static/cdn/bootstrap-iso.css" />

<h2>@Model.Title</h2>
<h5>Created By: @Model.Creator</h5>
@if (Model.Points > 0)
{
    <h5>Points: @Model.Points</h5>
}
<div class="bootstrap-iso">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Description</label>
                    <p>@Model.Description</p>
                </div>
                <div class="form-group">
                    <label class="control-label">Due Date</label>
                    <p>@Model.DueDate</p>
                </div>
                <div class="form-group">
                    <label class="control-label">Date Created</label>
                    <p>@Model.DateCreated</p>
                </div>
                @if(!String.IsNullOrEmpty(Model.FilePath)){
                <div class="form-group d-flex align-items-center">
                    <a type="button" class="btn btn-primary mr-4" asp-action="Download" asp-controller="Lesson" asp-route-fileName="@Model.FilePath">
                        Download file
                    </a>
                    <div style="width: 20px;"></div>
                    <span>@Model.FileName</span> 
                </div>
                }
            </div>
        </div>
    </div>
</div>

