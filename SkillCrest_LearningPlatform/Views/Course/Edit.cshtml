@model CourseEditViewModel
<div class="bootstrap-iso">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group ">
                        <label class="control-label " asp-for="Title">
                            Course Title
                        </label>
                        <input class="form-control" asp-for="Title" />
                    </div>
                    <div class="form-group ">
                        <label class="control-label " asp-for="ImageUrl">
                            Image Url
                        </label>
                        <input class="form-control" asp-for="ImageUrl" />
                    </div>
                    <div class="form-group">
                        <label class="control-label " asp-for="Description">
                            Description
                        </label>
                        <textarea class="form-control" cols="20" asp-for="Description" rows="5"></textarea>
                    </div>
                    <div class="form-group">
                        <div>
                            <p></p>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                    <input type="hidden" asp-for="DateCreated" value="@Model.DateCreated"/>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}