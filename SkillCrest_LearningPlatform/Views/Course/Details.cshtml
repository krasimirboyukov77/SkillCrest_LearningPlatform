@model CourseDetailsViewModel
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.84.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> 
    <style>
        body {
            padding-bottom: 100px; 
        }
    </style>
</head>
<body>
    <main class="container mt-4">
        <h1>Lessons</h1> 
        @if (Model.Lessons.Count > 0)
        {
            foreach (var lesson in Model.Lessons)
            {
                <div class="bg-light p-5 rounded mb-3">
                    <h2>@lesson.Title</h2>
                    <p class="lead">@lesson.Description</p>
                    @if (!lesson.IsCompleted)
                    {
                        <form action="/Lesson/ToggleLessonCompletion" method="post" class="lesson-completion-form" data-lesson-id="@lesson.Id">
                            <input type="hidden" name="lessonId" value="@lesson.Id" />
                        <input type="hidden" name="courseId" value="@Model.Id" />
                        <button type="submit" class="completion-btn incomplete" aria-checked="@lesson.IsCompleted.ToString().ToLower()">
                            <i class="fa-eye"></i>
                            <span>Mark as Complete</span>
                        </button>
                    </form>
                    }
                    else 
                    {
                        <form action="/Lesson/MarkAsIncomplete" method="post" class="lesson-completion-form" data-lesson-id="@lesson.Id">
                            <input type="hidden" name="lessonId" value="@lesson.Id" />
                            <input type="hidden" name="courseId" value="@Model.Id" />
                            <button type="submit" class="completion-btn completed" aria-checked="@lesson.IsCompleted.ToString().ToLower()">
                                <i class="fa-eye-slash"></i>
                                <span>Mark as Incomplete</span>
                            </button>
                        </form>
                    }
                    <a type="button" class="btn btn-primary" asp-action="Details" asp-controller="Lesson" asp-route-id="@lesson.Id">Details</a>
                    @if (User.IsInRole("Teacher") && User?.Identity?.Name == lesson.Creator)
                    {
                        <a type="button" class="btn btn-primary" asp-action="Edit" asp-controller="Lesson" asp-route-lessonId="@lesson.Id">Edit lesson</a>
                    }
                </div>
            }
        }
        else
        {
            <p>No lessons yet!</p>
        }
        @if (User.IsInRole("Teacher"))
        {
            <div class="text-center mt-4">
                <a type="button" class="btn btn-primary" asp-action="Create" asp-controller="Lesson" asp-route-courseId="@Model.Id">Click to create new assignment.</a>
        </div>
        }
    </main>
    <script src="../assets/dist/js/bootstrap.bundle.min.js"></script> 
</body>
</html>
